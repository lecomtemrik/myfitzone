                <!--/.col-->

                <div class="col-sm-6 col-lg-3">
                    <div class="card text-white bg-flat-color-6">
                        <div class="card-body">
                            <div class="card-left pt-1 float-left">
                                <h3 class="mb-0 fw-r">
                                    <span class="count float-left">18</span>
                                    <span>%</span>
                                </h3>
                                <p class="text-light mt-1 m-0">IMG</p>
                            </div><!-- /.card-left -->
