{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% extends 'base.html.twig' %}

{% block title %}Mensuration{% endblock %}

{% block body %}
    <!-- Breadcrumbs-->
    <div class="breadcrumbs">
        <div class="breadcrumbs-inner">
            <div class="row m-0">
                <div class="col-sm-4">
                    <div class="page-header float-left">
                        <div class="page-title">
                            <h1>Mensuration</h1>
                        </div>
                    </div>
                </div>
                <div class="col-sm-8">
                    <div class="page-header float-right">
                        <div class="page-title">
                            <ol class="breadcrumb text-right">
                                <li><a href="#">Outils</a></li>
                                <li><a href="#">Suivi</a></li>
                                <li class="active">Mensuration</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.breadcrumbs-->


<!-- Content -->
<div class="content">
    <!-- Animated -->
    <div class="animated fadeIn">

        <div class="card">
            <div class="card-header">
                Mes mesures :
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="container">
                    <div class="row row-cols-4">
                        <div class="col">{{ form_label(form.Cou) }}{{ form_widget(form.Cou) }}</div>
                        <div class="col">{{ form_label(form.Epaules) }}{{ form_widget(form.Epaules) }}</div>
                        <div class="col">{{ form_label(form.Poitrine) }}{{ form_widget(form.Poitrine) }}</div>
                        <div class="col">{{ form_label(form.Bras) }}{{ form_widget(form.Bras) }}</div>
                        <div class="col">{{ form_label(form.Tourdetaille) }}{{ form_widget(form.Tourdetaille) }}</div>
                        <div class="col">{{ form_label(form.Cuisses) }}{{ form_widget(form.Cuisses) }}</div>
                        <div class="col">{{ form_label(form.Mollets) }}{{ form_widget(form.Mollets) }}</div>
                        <button class="btn">{{ button_label|default('Enregistrer') }}</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>

    </div>
</div>



