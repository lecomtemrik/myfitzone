                        Actuel
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="container">
                            <div class="row row-cols-4">
                                <div class="col">{{ form_label(form.Cou) }}{{ form_widget(form.Cou) }}</div>
                                <div class="col">{{ form_label(form.Epaules) }}{{ form_widget(form.Epaules) }}</div>
                                <div class="col">{{ form_label(form.Poitrine) }}{{ form_widget(form.Poitrine) }}</div>
                                <div class="col">{{ form_label(form.Bras) }}{{ form_widget(form.Bras) }}</div>
                                <div class="col">{{ form_label(form.Tourdetaille) }}{{ form_widget(form.Tourdetaille) }}</div>
                                <div class="col">{{ form_label(form.Cuisses) }}{{ form_widget(form.Cuisses) }}</div>
                                <div class="col">{{ form_label(form.Mollets) }}{{ form_widget(form.Mollets) }}</div>
                                <button class="btn">{{ button_label|default('Enregistrer') }}</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header shadow p-3 rounded" style="background-color: #00c292; color: white; text-align: center">
                        Objectif
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="container">
